@model IEnumerable<_521_Project_3.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movie Home</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.YearReleased)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IMDBLink)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.MovieImage)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearReleased)
            </td>
            <td>
                <a href="@Html.DisplayFor(modelItem => item.IMDBLink)">@Html.DisplayFor(modelItem => item.IMDBLink)</a> 
            </td>
            <td>
                @if (item.MovieImage != null && item.MovieImage.Length != 0)
                {
                    <img height="150" src="@Url.Action("GetMovieImage", "Movies", new {item.Id})">
                }
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
